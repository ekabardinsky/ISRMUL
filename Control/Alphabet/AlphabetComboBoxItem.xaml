<UserControl x:Class="ISRMUL.Control.Alphabet.AlphabetComboBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Image" Grid.Column="0" Source="/ISRMUL;component/Control/Page/images/error.png" Stretch="Uniform" Width="50" Height="50"/>
        <TextBlock x:Name="Text" Grid.Column="1" Text="error" VerticalAlignment="Bottom" FontSize="25" Margin="25,0"/>
    </Grid>
</UserControl>
