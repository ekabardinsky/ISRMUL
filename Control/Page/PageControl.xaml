<UserControl x:Class="ISRMUL.Control.Page.PageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             Height="300"
             Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions> 
        <Border Grid.Row="1" BorderThickness="0,2">
            <Image Name="Image" Source="images/error.png" Stretch="Fill"/>
        </Border>
        <TextBlock Name="PageName" Text="Ошибка" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="14" />
    </Grid>
</UserControl>
