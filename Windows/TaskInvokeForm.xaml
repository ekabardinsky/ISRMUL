<Window x:Class="ISRMUL.Windows.TaskInvokeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="80" Width="300" x:Name="Task" ResizeMode="NoResize" IsEnabled="False" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <ProgressBar Value="{Binding ElementName=Task, Path=percent, Mode=OneWay}"/>
        <TextBlock Text="{Binding ElementName=Task, Path=percent, Mode=OneWay}" FontWeight="Bold" TextDecorations="{x:Null}" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
